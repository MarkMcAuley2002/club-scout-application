generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())

  profile     Profile? // Optional but will always be created as soon as the user has successfully been added. 
  memberships Membership[]
}

model Profile {
  user_id     Int     @id
  bio         String? @default("No bio yet")
  profile_pic String? @default("https://img.icons8.com/?size=64&id=tZuAOUGm9AuS&format=png")

  user User @relation(fields: [user_id], references: [id])
}

model Club {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        String[]

  events      Event[]
  memberships Membership[]
  images      Image[]
}

model Membership {
  id      Int    @id @default(autoincrement())
  user_id Int
  club_id Int
  role    String @default("member")

  user User @relation(fields: [user_id], references: [id])
  club Club @relation(fields: [club_id], references: [id])
}

model Image {
  id            Int      @id @default(autoincrement())
  uploaded_by   Int
  club_id       Int
  uploaded_data DateTime @default(now())
  url           String
  description   String?
  type          String

  club Club @relation(fields: [club_id], references: [id])
}

model Event {
  id        Int      @id @default(autoincrement())
  club_id   Int
  title     String
  all_day   Boolean
  date      DateTime
  createdAt DateTime @default(now())

  club Club @relation(fields: [club_id], references: [id])
}
